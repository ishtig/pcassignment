<resources>

    <!-- the theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionMenuTextColor">@drawable/tab_text_color_selector</item>

        <!-- Support library compatibility -->
        <item name="actionMenuTextColor">@drawable/tab_text_color_selector</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/RED</item>

        <!-- Support library compatibility -->
        <item name="background">@color/RED</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <color name="BLACK">#000000</color>
    <color name="WHITE">#FFFFFF</color>
    <color name="BLUE">#37A6E1</color>
    <color name="RED">#E43A43</color>
</resources>
